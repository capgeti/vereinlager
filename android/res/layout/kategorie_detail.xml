<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9">

        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategoriedaten"/>

        <EditText
                android:id="@+id/kategorie_detail_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:hint="Kategoriename"
                />

        <EditText
                android:id="@+id/kategorie_detail_gegenstand_std_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:hint="Standard Detailname"
                />

        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:id="@+id/textView"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kategorie_detail_detail_text"
                    android:layout_weight="0.7"
                    android:hint="Detailname"
                    />

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kategorie_detail_std_text"
                    android:layout_weight="0.2"
                    android:hint="Std"
                    />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Hinzufügen"
                    android:onClick="addDetail"
                    />
        </LinearLayout>

        <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/kategorie_detail_detail_list"
                android:layout_weight="0.9"/>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            >

        <TextView
                android:id="@+id/kategorie_info_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="* Achtung:\nDas entfernen eines bestehenden Details, löscht bei vorhandenen Elementen ebenfalls dieses Detail!"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abbrechen"
                android:id="@+id/kategorie_detail_save_button"
                android:onClick="save"
                android:layout_below="@+id/kategorie_info_text"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/button"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speichern"
                android:id="@+id/button"
                android:onClick="save"
                android:layout_below="@+id/kategorie_info_text"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>