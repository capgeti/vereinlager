<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:weightSum="10"
              android:textAlignment="center"
              android:baselineAligned="false"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erstellt, 2013, von Michael Wolter "
            android:id="@+id/textView" android:layout_gravity="center" android:paddingTop="10dp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" http://www.apache.org/licenses/LICENSE-2.0"
            android:id="@+id/textView4" android:layout_gravity="center" android:textStyle="italic"
            android:autoLink="web"
            android:clickable="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ein Hoch auf werbefreie Apps :D"
            android:id="@+id/textView5" android:layout_gravity="center" android:paddingTop="20dp"/>
</LinearLayout>